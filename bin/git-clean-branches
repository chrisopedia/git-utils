#!/usr/bin/env bash
#
# Author:
#   Greg Allen (@jgallen23)
#
# Description:
#   Remove all local branches that have been merged into master
#
# Dependencies:
#   git
#
# Configuration:
#   @param  none
#
# Usage:
#   `git clean-branches`

_git-clean-branches() {
	# This has to be run from master
	git checkout master

	# Update our list of remotes
	git fetch
	git remote prune origin

	# Remove local fully merged branches
	git branch --merged master | grep -v 'master$' | xargs git branch -d

	# Show remote fully merged branches
	printf "%sâš  Warning:%s The following remote branches are fully merged and will be removed!\n" "$(tput bold ; tput setaf 3)" "$(tpu sgr0)"
	git branch -r --merged master | sed 's/ *origin\///' | grep -v 'master$'

	# Continue or not?
	read -p "Continue (y/n)? "
	if [ "$REPLY" == "y" ]; then
		# Remove remote fully merged branches
		git branch -r --merged master | sed 's/ *origin\///' | grep -v 'master$' | xargs -I% git push origin :%
	fi
}

_git-clean-branches
